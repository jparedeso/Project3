<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project3.Web</title>
    <link href="https://fonts.googleapis.com/css?family=Audiowide|Press+Start+2P" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Titillium+Web" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <environment include="Development,Staging">
        <link rel="stylesheet" href="/dist/css/vendor.css" />
        <link rel="stylesheet" href="/dist/css/site.css" />
    </environment>
    <environment include="Production">
        <link rel="stylesheet" href="/dist/css/vendor.css" asp-append-version="true" />
        <link rel="stylesheet" href="/dist/css/site.css" asp-append-version="true" />
    </environment>
</head>
<body id="body">
<div class="body-content">
    @{
        Html.RenderPartial("_header");
    }
    @RenderBody()
    <br/>
    <footer class="fixed">
        <p id="footerText"> CART CATALOG 2018 </p>
    </footer>
</div>

    <environment include="Development,Staging">
        <script src="/dist/js/vendor.js"></script>
        <script src="/dist/js/site.js"></script>
    </environment>
    <environment include="Production">
        <script src="/dist/js/vendor.js" asp-append-version="true"></script>
        <script src="/dist/js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
